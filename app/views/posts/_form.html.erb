<div class="well">
  <%= form_for @post do |f| %>
    <div class="control-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="control-group">
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>

    <div class="control-group">
      <%= f.label :content %>
      <%= f.text_area :content, rows: 5 %>
    </div>

    <%= f.submit action, class: "btn btn-primary" %>

  <% end %>
</div>
