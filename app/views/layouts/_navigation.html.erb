<div class="brand-and-categories">
  <ul class="nav">
    <li>
      <%= link_to "POSTOPIA", root_path, :class => 'main-title' %>
    </li>
  </ul>


  <%# categories dropdown %>
  <div class="nav_item btn-group">
    <%= link_to '#', class: "btn btn-large btn-success dropdown-toggle a-button", 'data-toggle' => 'dropdown' do %>
      Categories <span class="caret"></span>
    <% end %>
    <ul class="dropdown-menu">
      <% Category.all.each do |category| %>
        <li><%= link_to category.name, category_path(category) %></li>
      <% end %>
      <li class="divider"></li>
      <% if logged_in? %>
        <li><%= link_to new_category_path do %>
          <i class="icon-plus"></i>
          New category
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<%# if logged_in? user dropdown %>
<% if logged_in? %>

  <div class="btn-group nav_item nav-user-button">
    <%= link_to '', class: "btn btn-large btn-success dropdown-toggle a-button", "data-toggle" => "dropdown" do %>
      <%= current_user.username %>
      <span class="caret"></span>
    <% end %>
    <ul class="dropdown-menu">
      <li>
        <%= link_to edit_user_path(current_user) do %>
          <i class="icon-pencil"></i>
          Edit profile
        <% end %>
      </li>

      <li>
        <%= link_to user_path(current_user) do %>
          <i class="icon-user"></i>
          View profile
        <% end %>
      </li>

      <li>
        <%= link_to logout_path(current_user) do %>
          <i class="icon-circle-arrow-left"></i>
          Logout
        <% end %>
      </li>
    </ul>
  </div>

<%# else register and login buttons %>
<% else %>
  <% if logging_in = true %>
    <div class="nav_item nav-login-button">
      <%= link_to 'Login', login_path, class: "btn btn-large btn-success a-button" %>
    </div>
  <% end %>
<% end %>

